
<p id="notice"><%= notice %></p> 
  <div class="col-md-6 col-md-offset-3" id='wrapper'>
 	<h1 id="word">tu palabra</h1>
 	<h2 id="counter" >0</h2>
     <div id="play" class="button tubular-play"><span><i class="glyphicon glyphicon-play"></i></span></div>
     <div id="play" class="button tubular-pause"><span><i class="glyphicon glyphicon-pause"></i></span></div>
 	 <div id="change-text" class="button"><span>Change Text</span></div>
 	 <div id="bonus" class="button"><span><i class="glyphicon glyphicon-star"></i> Bonus <i class="glyphicon glyphicon-star"></i></span></div>
 	

 </div>





  
  




<div class="col-md-12">
<p>
  <strong>Content:</strong>
  <p id="content"><%= @battle.content %></p>
</p>

<%= link_to 'Edit', edit_battle_path(@battle) %> |
<%= link_to 'Back', battles_path %>
</div>
<script>
	$("document").ready(function() {
  var options = {  videoId: "<%= @battle.link %>", 
                   start: 0, 
                   repeat: true,
                   mute: false,
                   playButtonClass: 'tubular-play',
                   pauseButtonClass: 'tubular-pause',

                };  
  
	$('#wrapper').tubular(options); 
}); 
</script>




<script>



				var split = document.getElementById('content').innerHTML.split(',');


				var nvalue = 0;
				var score = 0;
				$("#change-text").on("click", function() {

						document.getElementById('counter').innerHTML = score++;
						
						var word = split[nvalue++];
						document.getElementById('word').innerHTML = word;
						
				});
				$("#bonus").on("click", function() {
						var plusscore = score + 5;
						document.getElementById('counter').innerHTML = plusscore;
						score = plusscore;
						
						
				});


</script>
