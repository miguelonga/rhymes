<p id="notice"><%= notice %></p>




<div class="col-md-10 col-md-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">Listado de batallas</div>
    <table class="table">
      <thead>
        <tr>
          <th>Beat</th>
          <th>Some words</th>
          <th>Options</th>
          
        </tr>
      </thead>
      <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><iframe width="420" height="auto" src=<%= battle.link %> frameborder="0" allowfullscreen></iframe></td>
        <td><%= battle.content.truncate(200) %></td>
        <td><%= link_to 'Show', battle %>, <%= link_to 'Edit', edit_battle_path(battle) %>, <%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
    </table>
  </div>
  

<br>


